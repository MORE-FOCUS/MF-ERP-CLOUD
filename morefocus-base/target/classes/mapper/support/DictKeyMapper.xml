<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.morefocus.base.module.support.dict.mapper.DictKeyMapper">

    <update id="updateDeletedFlagByIdList">
        update t_dict_key set delete_flag = #{deleteFlag} where dict_key_id in
        <foreach collection="dictKeyIdList" open="(" close=")" separator="," item="item">
            #{item}
        </foreach>
    </update>

    <select id="query" resultType="cn.morefocus.base.module.support.dict.domain.vo.DictKeyVO">
        SELECT * FROM t_dict_key
        <where>
            <if test="query.searchWord != null and query.searchWord !=''">
                AND (INSTR(key_code,#{query.searchWord}) or INSTR(key_name,#{query.searchWord}))
            </if>
            <if test="query.deleteFlag != null">
                AND delete_flag = #{query.deleteFlag}
            </if>
        </where>
        <if test="query.sortItemList == null or query.sortItemList.size == 0">
            ORDER BY dict_key_id DESC
        </if>
    </select>

    <select id="selectByCode"
            resultType="cn.morefocus.base.module.support.dict.domain.entity.DictKeyEntity">
        select * from t_dict_key where key_code = #{keyCode} and delete_flag = #{deleteFlag}
    </select>

    <select id="selectByDeletedFlag"
            resultType="cn.morefocus.base.module.support.dict.domain.entity.DictKeyEntity">
        select * from t_dict_key where delete_flag = #{deleteFlag}
    </select>

</mapper>